extends _layout_

block content
    section.login_block(ng-controller="login")
        article.alert(ng-if="error") {{ error }}
        md-grid-list(md-cols="8" md-row-height="40px")
            md-grid-tile(md-colspan="2").label_log
                article Username
            md-grid-tile(md-colspan="6")
                input(type='text' name='login' class='log_input' ng-model="user_data.login")
        md-grid-list(md-cols="8" md-row-height="40px")
            md-grid-tile(md-colspan="2").label_log
                article Password
            md-grid-tile(md-colspan="6")
                input(type='password' name='pass' class='log_input' ng-model="user_data.pass")
        md-grid-list(md-cols="8" md-row-height="50px")
            md-grid-tile(md-colspan="6").label_log
                md-checkbox(ng-click="EULA_click()") I agree to the EULA
            md-grid-tile(md-colspan="2").label_log
                md-button(class="md-raised md-primary" ng-click="login_request()") Login
        md-grid-list(md-cols="8" md-row-height="40px")
            md-grid-tile(md-colspan="3").label_log
                a.help_link Forgot username?
            md-grid-tile(md-colspan="2")
            md-grid-tile(md-colspan="3").label_log
                a.help_link Forgot password?