extends _layout_

block content
    form(method='POST' action='/login')
        md-grid-list(md-cols="8" md-row-height="40px")
            md-grid-tile(md-colspan="4")
                span Username
            md-grid-tile(md-colspan="4")
                input(type='text' name='login' placeholder='Login' required)
        md-grid-list(md-cols="8" md-row-height="40px")
            md-grid-tile(md-colspan="4")
                span Password
            md-grid-tile(md-colspan="4")
                input(type='password' name='pass' placeholder='Password' required)
        md-grid-list(md-cols="8" md-row-height="50px")
            md-grid-tile(md-colspan="4")
                md-checkbox I agree to the EULA
            md-grid-tile(md-colspan="2")
            md-grid-tile(md-colspan="2")
                input(type='submit' value='Enter')
        md-grid-list(md-cols="8" md-row-height="40px")
            md-grid-tile(md-colspan="2") Forgot username?
            md-grid-tile(md-colspan="4")
            md-grid-tile(md-colspan="2") Forgot password?