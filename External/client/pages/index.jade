    md-card(md-theme="default", md-theme-watch='')
        md-card-title
            md-card-title-text
                h2 Compare two pics
                form(action="/two_pics" method="POST" enctype="multipart/form-data")
                    input(type="file" name="one" required)
                    input(type="file" name="two" required)
                    br
                    md-button(class="md-raised md-primary").submit Compare

    md-card(md-theme="default", md-theme-watch='')
        md-card-title
            md-card-title-text
                form(action="/all_pics" method="POST" enctype="multipart/form-data")
                    h2 Compare all pics
                    input(type="file" name="one" required)
                    br
                    //input(type="submit" value="SUBMIT")
                    md-button(class="md-raised md-primary").submit Compare

    md-card(md-theme="default", md-theme-watch='')
        md-card-title
            md-card-title-text
                form(action="/upload" method="POST" enctype="multipart/form-data")
                    h2 Upload image
                    article.save_files
                        input(type="file" class="files_upload_field" name="file_1" data-used="0" required)
                    br
                    md-button(class="md-raised md-primary").submit Compare

