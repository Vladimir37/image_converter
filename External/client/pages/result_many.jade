extends _layout_

block scripts
    script(src="/src/result_render.js")

block content
    section.result.result_many
        article.logo_panel
            md-grid-list(md-cols="5" md-row-height="60px")
                md-grid-tile(md-colspan="2")
                md-grid-tile(md-colspan="1")
                    img(alt="logo" src="/src/img/logo.png").logo_img
                md-grid-tile(md-colspan="2")
        article.top_panel
            md-grid-list(md-cols="6" md-row-height="50px")
                md-grid-tile(md-colspan="1")
                    md-button(class="md-raised md-primary md-but-menu") Capture
                md-grid-tile(md-colspan="1")
                    md-button(class="md-raised md-primary md-but-menu") Add
                md-grid-tile(md-colspan="2")
                    h3.main-logo Client logo
                md-grid-tile(md-colspan="1")
                    md-button(class="md-raised md-primary md-but-menu") Start
                md-grid-tile(md-colspan="1")
                    md-button(class="md-raised md-primary md-but-menu") Stop

        article.main
            md-grid-list(md-cols="8" md-row-height="400px").result_canvas
                md-grid-tile(md-colspan="3")
                    md-card(md-theme="default", md-theme-watch='')
                        md-card-title
                            md-card-title-text
                                .md-media-lg.card-media
                                    canvas(width=172 height=304).first_canv
                                    //canvas().first_canv
                md-grid-tile(md-colspan="2")
                    md-card(md-theme="default", md-theme-watch='')
                        md-card-title
                            md-card-title-text
                                article.res_circle.res_green
                                article.delimiter
                                article.res_circle.res_amber
                                article.delimiter
                                article.res_circle.res_red
                            md-card-title-text
                                article(style="width: 20px")
                            md-card-title-text
                                article.res_descript >90%
                                article.delimiter
                                article.res_descript >60%
                                article.delimiter
                                article.res_descript <50%
                md-grid-tile(md-colspan="3")
                    md-card(md-theme="default", md-theme-watch='')
                        md-card-title
                            md-card-title-text
                                .md-media-lg.card-media
                                    canvas(width=172 height=304).second_canv
